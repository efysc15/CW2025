<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">

    <HBox fx:id = "buttonBar" spacing = "10" layoutX = "30" layoutY = "10" prefWidth = "600"/>

    <Group layoutY = "50">
        <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
        <BorderPane styleClass="gameBoard" fx:id="gameBoard">
            <center>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1"/>     
            </center>
        </BorderPane>
    </Group>

    <VBox fx:id = "nextBoxContainer" alignment = "CENTER" translateX = "250" translateY = "50">
        <Label fx:id = "nextLabel" text = "NEXT" textFill = "white"
                    style = "-fx-font-weight: bold; -fx-font-size: 16px;"
                    layoutX = "10" layoutY = "10" />
        <GridPane fx:id = "nextBrickPanel" hgap = "2" vgap = "2"
                prefWidth = "120" prefHeight = "120"
                style = "-fx-background-color: #222; -fx-border-color: white; -fx-border-width: 2; -fx-padding: 5" />
    </VBox>

    <VBox fx:id = "holdBrickContainer" alignment = "CENTER" translateX = "250" translateY = "200">
        <Label text = "HOLD" layoutX = "10" layoutY = "10" textFill = "WHITE"
                style = "-fx-font-weight: bold; -fx-font-size: 16px"/>
        <GridPane fx:id = "holdBrickPanel" layoutX = "10" layoutY = "40" 
                prefHeight = "120" prefWidth = "120"
                style = "-fx-background-color: #222; -fx-border-color: white; -fx-border-width: 2;"/>
    </VBox>

    <VBox fx:id = "scoreContainer" layoutX = "250" layoutY = "350" alignment = "BOTTOM_LEFT">
        <Label text = "SCORE" textFill = "white" style = "-fx-font-weight: bold; -fx-font-size: 16px;"/>
        <Label fx:id = "scoreLabel" text = "0" textFill = "white" style = "-fx-font-size: 16px;"/>
    </VBox>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>